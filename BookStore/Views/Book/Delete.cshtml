@model BookStore.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1 class=" ms-3">Delete</h1>

<h3 class=" ms-3">Are you sure you want to delete this?</h3>
<div class=" ms-3">
    <h4>Book</h4>
    <hr />
    <dl class="row  ms-3">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        @if (Model.ImageUrl != null)
        {
            <dt>
                Image
            </dt>
            <dd>
                <img src="~/Uploads/@Model.ImageUrl" alt="Alternate Text" style="width:140px" class="img-thumbnail" />
            </dd>
        }
    </dl>
    
    <form asp-action="ConfirmDelete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
    </form>
</div>
