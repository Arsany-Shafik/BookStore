@model IEnumerable<BookStore.Models.Book>

@{
	ViewData["Title"] = "Index";
}

<h1 class=" ms-3">Index</h1>

<p class=" ms-3">
	<a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<table class="table table-bordered table-striped table-hover  ms-3">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				<label for="Fullname">FullName</label>
			</th>
			<th>
				Image
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Author.Fullname)
				</td>
				<td>
					@if (item.ImageUrl != null)
					{
						<img src="~/Uploads/@item.ImageUrl" alt="Alternate Text" style="width:70px;" class="img-thumbnail" />
					}
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
				</td>
			</tr>
		}
	</tbody>
</table>
